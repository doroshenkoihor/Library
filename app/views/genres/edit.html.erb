<% currently_at 'Genres' %>
<div class="container-sm">
  <h1 class="mb-4"> Edit genre</h1>
  <%= form_tag genre_path(@genre), method: :put do %>
    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <label for = "genre_name">Genre name:</label>
      </div>
      <div class="col-sm-10">
        <%= text_field 'genre', 'name', class: 'form-control form-control-lg' %>
      </div>
    </div>
    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <label for = "genre_book_ids">Books:</label>
      </div>
      <div class="col-sm-10">
        <%= collection_select(:genre, :book_ids, @books, :id, :name, {}, {multiple: true, class: 'form-select form-select-lg'}) %>
      </div>
    </div>
    <%= submit_tag "Update", class: 'btn btn-primary btn-md' %>
  <% end %>
</div>