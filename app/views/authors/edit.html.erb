<% currently_at 'Authors' %>
<div class="container-sm">
  <h1 class="mb-4">Edit authors</h1>
  <%= form_tag author_path(@author), method: :put do %>
    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <label for = "author_name">Author name:</label>
      </div>
      <div class="col-sm-10">
        <%= text_field 'author', 'name', required: true, class: 'form-control form-control-lg' %>
      </div>
    </div>
    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <label for = "book_ids">Books:</label>
      </div>
      <div class="col-sm-10">
        <%= collection_select(:author, :book_ids, @book, :id, :name, {}, {multiple: true, class: 'form-select form-select-lg'}) %>
      </div>
    </div>
    <%= submit_tag "Update", class: 'btn btn-primary btn-md' %>
  <% end %>
</div>